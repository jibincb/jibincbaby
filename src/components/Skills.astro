---
import { skills } from "../data/skills";
---

<div class="flex flex-col w-full md:mt-16 mt-8">
  <h1
    class="md:text-5xl text-3xl font-bold text-center justify-center md:mb-12 mb-5 fade-in from-left"
  >
    Skills
  </h1>

  <div
    class="grid md:grid-cols-2 md:grid-rows-2 gap-6 justify-center items-stretch"
  >
    {
      skills.map((skill) => {
        return (
          <div class="flex flex-col bg-white/10 backdrop-blur-md text-white rounded-4xl p-8">
            <h2 class="md:text-3xl text-xl font-bold mb-5 text-center">
              {skill.title}
            </h2>
            <ul class="list-disc list-inside text-2xl items-left space-y-4">
              {skill.items.map((item) => {
                return (
                  <li class="flex items-center gap-10 text-lg md:text-xl fade-in from-right">
                    <span>
                      <img src={item.icon} alt="" class="h-8 w-8" />
                    </span>
                    {item.name}
                  </li>
                );
              })}
            </ul>
          </div>
        );
      })
    }
  </div>
</div>
