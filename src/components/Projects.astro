---
import { projects } from "../data/projects";
---

<div class="flex flex-col">
  <h1 class="text-5xl font-bold mb-4 mt-16 text-center justify-center">
    Projects
  </h1>

  <div class="grid md:grid-cols-2 gap-6 justify-center mt-10 items-stretch">
    {
      projects.map((project) => {
        return (
          <div class="flex flex-col bg-white/10 backdrop-blur-md text-white rounded-4xl p-8">
            <h2 class="text-3xl font-bold mb-3 text-center">{project.title}</h2>
            <p class="text-xl mb-4 text-center">{project.excerpt}</p>
            <div class="flex flex-wrap gap-2 justify-center mb-4">
              {project.tech.map((tech) => (
                <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="mt-auto text-center">
              <a
                href={`/projects/${project.id}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block bg-white/20 hover:bg-white/30 transition-colors px-4 py-2 rounded-full"
              >
                View more details
              </a>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
